<!doctype html>
<html lang="en" class="h-100">
  <head>
    <% include include/head.ejs %>
    <link rel="stylesheet" href="css/dashboard-light.css">
  </head>

  <body class="d-flex flex-column h-100">
    <!-- Begin page content -->
    <main role="main" class="flex-shrink-0">
      <div class="container">

        <% if (user.displayName == null) { %>
          <h1 class="mt-5"><%= user.email %></h1>
        <% } else { %>
          <h1 class="mt-5"><%= user.displayName %></h1>
        <% } %>
        <small class="form-text text-muted">Edit your <a href="/profile/<%= user.uid %>">profile <i class="far fa-edit"></i></a></small>
        <small class="form-text text-muted">Close your dashboars and <a href="/logout">Exit <i class="far fa-sign-out-alt"></i></a></small>

        <!-- aggiungere altri campi di dettaglio per utente -->
