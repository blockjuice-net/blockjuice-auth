<!doctype html>
<html lang="en">
  <head>
  <% include include/head.ejs %>
  <link rel="stylesheet" href="/css/signin.css">
  </head>

  <body class="text-center">

    <form class="form-signin" method="POST" action="/auth/resetpassword">

      <% include include/head_sign.ejs %>
      
      <label for="inputEmail" class="sr-only">Email</label>
      <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email" required autofocus>
      
      <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top: 10px;"><%= typeform %></button>
      
      <% include include/message_sign.ejs %>

      <% include include/error_sign.ejs %>
      
      <% include include/footer_sign.ejs %>

    </form>

    <% include include/scripts.ejs %>

  </body>
</html>

