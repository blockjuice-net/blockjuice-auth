<script>

    var pwd1 = document.getElementById("inputPassword");
    var pwd2 = document.getElementById("inputPasswordC");
    var alert_pwd_same = document.getElementById("alert_pwd_same");
    
    alert_pwd_same.text = 'passwords are not the same';
    alert_pwd_same.classList.add("badge-warning");

    let samePassword = (value1, value2) => {
        return value1 == value2;
    };

    pwd2.onkeyup = function() {

        if (samePassword(pwd1.value, pwd2.value)) {
            alert_pwd_same.text = 'passwords are the same';  
            alert_pwd_same.classList.remove("badge-warning");
            alert_pwd_same.classList.add("badge-success");  
        } else {
            alert_pwd_same.text = 'passwords are not the same';  
            alert_pwd_same.classList.remove("badge-success");
            alert_pwd_same.classList.add("badge-warning"); 
        }     

    }

</script>