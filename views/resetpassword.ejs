<!doctype html>
<html lang="en">
  <head>
  <% include include/head.ejs %>
  <link rel="stylesheet" href="/css/signin.css">
  </head>

  <body class="text-center">

    <form class="form-signin" method="POST" action="/auth/newpassword">

      <% include include/head_sign.ejs %>
      
      <label for="inputPassword" class="sr-only">New Password</label>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="New Password" required>

      <% include include/password_check.ejs %>

      <label for="inputPassword" class="sr-only">Confirm Password</label>
      <input type="password" id="inputPasswordC" name="passwordConfirm" class="form-control" placeholder="Confirm Password" required>

      <span class="badge" id="alert_pwd_same"></span>

      <button class="btn btn-lg btn-primary btn-block" type="submit"><%= typeform %></button>
      
      <% include include/message_sign.ejs %>

      <% include include/error_sign.ejs %>
      
      <% include include/footer_sign.ejs %>

    </form>

    <% include include/scripts.ejs %>

    <% include include/password_validate.ejs %>
    <% include include/password_compare.ejs %>

  </body>
</html>

