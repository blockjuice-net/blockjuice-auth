<!doctype html>
<html lang="en">
<head>
  <% include include/head.ejs %>
  <link rel="stylesheet" href="/css/signin.css">
  <link rel="stylesheet" href="/css/login.css">
</head>

<body class="text-center">

  <form  class="form-signin" method="POST" action="/auth/signup" id="signup">
  
    <% include include/title_sign.ejs %>

    <input type="email" :class="isValidMail" id="inputEmail" name="email" placeholder="eMail Address" aria-label="eMail" v-model="email" :change="email_change" required autofocus>
    <div :class="isValidFeedBackMail" id="validEmail">
      {{ messageMail }}
    </div>
  
    <input type="password" id="inputPassword" name="password" :class="isValidPassword" placeholder="Password" aria-label="Password" v-model="password" :change="password_change" required>
    <div id="validPwd" :class="isValidFeedBackPassword">
      {{ messagePassword }}
    </div>
  
    <input type="password" id="inputPasswordCompare" name="passwordCompare" :class="isValidPasswordCompare" placeholder="Re-Type Password" aria-label="Re-Type Password" v-model="passwordCompare" :change="passwordCompare_change" required>
    <div id="validPwdCompare" :class="isValidFeedBackPasswordCompare">
      {{ messagePasswordCompare }}
    </div>

    <button class="g-recaptcha" 
        data-sitekey="6LfrniwaAAAAAPHlXxV3CU9JuWsrFPj4moO-CHOf" 
        data-callback='onSubmit' 
        data-action='submit'>Submit</button>
    
    <button class="btn btn-lg btn-primary btn-block" type="submit" id="sign_btn"><%= typeform %></button>
    
    <% include include/message_sign.ejs %>
    <% include include/error_sign.ejs %>
    <% include include/sign_social.ejs %>
    <% include include/footer_sign.ejs %>

  </form>

  <% include include/scripts.ejs %>
  <script src="https://www.google.com/recaptcha/api.js"></script>
  <script src="/js/signup.js"></script>
  <script src="/js/recaptcha.js"></script>

</body>
</html>

