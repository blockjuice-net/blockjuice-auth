<!doctype html>
<html lang="en">
  <head>
  <% include include/head.ejs %>
  <link rel="stylesheet" href="/css/signin.css">

  </head>

  <body class="text-center">

    <form class="form-signin" method="POST" action="/auth/signup">
    
      <% include include/head_sign.ejs %>
      
      <label for="inputEmail" class="sr-only">Email</label>
      <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email" required autofocus>
      
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=/^\S*$/)(?=/^[A-Za-z0-9\!\@\#\$\%\^\&\*\)\(+\=\._-]+$/g).{8,100}" required>
      
      <% include include/password_check.ejs %>

      <button class="btn btn-lg btn-primary btn-block" type="submit" id="sign_btn"><%= typeform %></button>
      
      <% include include/message_sign.ejs %>

      <% include include/error_sign.ejs %>
      
      <% include include/sign_social.ejs %>

      <% include include/footer_sign.ejs %>

    </form>

    <% include include/scripts.ejs %>

    <% include include/password_validate.ejs %>

  </body>
</html>

